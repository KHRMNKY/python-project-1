import json 
class Menu():
    def __init__(self):
        self.Durum=True
        
    
    
    def Calistir(self):
        print("""
1) Giriş Yap
2) Kayıt Ol  
3) Şifremi unuttum            
              """)
        try:
            secim=int(input("lutfen seciminizi giriniz= "))
        except:
            secim=int(input("ltfen uygun deger gırınız= "))
            
        if secim==1:
            self.Giris()
        elif secim==2:
            self.KayıtOl()
        elif secim==3:
            self.SifreDegistir()
    
    
    def Giris(self):
        print("şkadjfgh")
    
    
    def KayıtOl(self):
        print("krjgvmözxnb8798")
    
    
    def SifreDegistir(self):
        pass    
        
    
    def Cikis(self):
        self.Durum=False
    
    
menu=Menu()
while menu.Durum:
    menu.Calistir()
    





















